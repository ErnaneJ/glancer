<div class="flex-1 flex flex-col h-full bg-white dark:bg-gray-900 items-center">
  <div id="chat-messages" class="flex-1 overflow-y-auto p-4 pb-20 w-full">
    <% messages.each do |message| %>
      <%= render "glancer/messages/message", message: message %>
    <% end %>
  </div>

  <div class="absolute bottom-0 left-64 right-0 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 p-4">
    <div class="max-w-3xl mx-auto">
      <%= render "glancer/messages/form", chat: chat %>
    </div>
  </div>
</div>