<div data-controller="chat" class="w-64 bg-gray-50 dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 h-full flex flex-col">
  <div class="p-4">
    <h1 class="text-2xl font-bold text-primary-600 dark:text-primary-400 mb-6">Glancer</h1>
    <%= link_to "New chat", glancer.chats_path, 
                class: "w-full flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 rounded-md py-2 px-4 text-sm font-medium hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors",
                data: { 
                  turbo_method: :post,
                  action: "click->chat#create" 
                } %>
  </div>

  <div class="px-3 pb-2">
    <h2 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Chats</h2>
  </div>

  <%= render "glancer/chats/sidebar_chat_list", chats: @chats, chat: @chat %>
</div>