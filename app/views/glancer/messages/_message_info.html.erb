<div data-controller="message" id="message-info">
  <% if @message_for_info %>
    <div class="fixed inset-0 z-50 bg-black/50 flex justify-end" id="message-info--area" data-action="click->message#closeMessageInfo">
      <div
        id="message-info--content"
        style="transform: translateX(100%);"
        data-action="click->message#stopPropagation"
        class="relative w-full max-w-2xl bg-white dark:bg-gray-900 h-full shadow-lg transform transition-transform overflow-y-auto z-50"
      >
        <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Message#<%= @message_for_info.id %></h2>
          <button
            class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 text-xl"
            aria-label="Fechar"
            data-action="click->message#closeMessageInfo"
          >
            &times;
          </button>
        </div>

        <div class="px-4 pt-4">
          <h2 class="text-md font-semibold text-gray-800 dark:text-gray-100">User Question</h2>
          <div class="message assistant overflow-auto">
            <%= raw Glancer::Utils::MarkdownHelper.markdown_to_html("```\n \"#{@message_for_info.user_message.content}\"\n```") %>
          </div>
        </div>

        <div class="flex justify-center">
          <hr class="border-gray-300 dark:border-gray-700 w-1/2 m-0" />
        </div>

        <div class="px-4">
          <h2 class="text-md font-semibold text-gray-800 dark:text-gray-100">SQL Query</h2>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Generated SQL query by AI</p>
          <div class="message assistant overflow-auto">
            <%= raw Glancer::Utils::MarkdownHelper.markdown_to_html("```sql\n#{@message_for_info.sql}\n````") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>